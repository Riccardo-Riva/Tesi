(*
 SP[a,b]
 tensore metrico
 prodotto scalare tra due impulsi
 rappresentazione di un impulso
 *)


myTr[{a_,b_}] := 4 SP[a,b];

myTr[x_List] := Module[{risultato,ultima,menouna,menodue,coefficienti,l,tmp,coeff},

		       l =  Length[x];
		       If[ OddQ[l],
			   Return[0]
			   ];

		       ultima=x[[-1]];
		       menouna = Delete[x,-1];

		       menodue = Table[ tmp=Delete[menouna,k];
					myTr[tmp],
					{k,1,l-1}
					];
		       coefficienti = Table[ (-1)^(k+1) SP[ menouna[[k]], ultima],
					     {k,1,l-1}
					     ];
		       risultato = menodue.coefficienti;

		       (*
		       risultato = Sum[ tmp=Delete[menouna,k];
					coeff = (-1)^(k+1) SP[ menouna[[k]], ultima];
					coeff myTr[tmp],
					{k,1,l-1}
					];

			
			*)
		       
		       risultato

		       ]
